<Page x:Class="RSFJ.View.BalanceSheetPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RSFJ.View"
      xmlns:vm="clr-namespace:RSFJ.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="BalanceSheetPage">

    <Page.DataContext>
        <vm:BalanceSheetViewModel x:Name="ViewModel" />
    </Page.DataContext>

    <Grid>
        <ListView ItemsSource="{Binding Path=StockItems}" DisplayMemberPath="Name" />
    </Grid>
</Page>
